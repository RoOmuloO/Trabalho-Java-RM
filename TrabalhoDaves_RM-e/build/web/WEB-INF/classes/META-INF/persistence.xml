<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="TrabalhoDavesPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>manager.Exame</class>
    <class>manager.Usuario</class>
    <class>manager.ReceitaHasMedicamento</class>
    <class>manager.Receita</class>
    <class>manager.Dosagem</class>
    <class>manager.Medicamento</class>
    <class>manager.Consulta</class>
    <class>model.Usuario</class>
    <class>model.Dosagem</class>
    <class>model.Exame</class>
    <class>model.Medicamento</class>
    <class>model.Receita</class>
    <class>model.ReceitaHasMedicamento</class>
    <class>model.Consulta</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/rm_e?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
